---
import Card from '../components/Card.astro';
import WavingHand from '../components/WavingHand.astro';
import BasePageLayout from '../layouts/BasePageLayout.astro';

const title = 'Rendani Gangazhe - Software Engineer';
const description =
	'Software Engineer specialising in web development. I thrive off of learning and trying out new things. I like guitars.';
---

<BasePageLayout title={title} description={description}>
	<h1 class="text-center md:text-left md:text-5xl">
		<WavingHand /> hey, I'm Rendani.
	</h1>

	<div class="flex flex-col items-center justify-center md:my-12 md:flex-row">
		<img
			class="my-8 rounded-full md:my-0 md:mr-8"
			loading="eager"
			src="/avatar.webp"
			width={128}
			height={128}
			alt="My portrait"
		/>

		<p class="text-2xl font-bold lg:text-3xl">
			Software Engineer. Tinkerer. Creative.
		</p>
	</div>

	<div>
		<p class="prose prose-invert mt-4 text-lg">
			I'm a web developer with a passion for building things that live on the
			internet. I currently work <a
				href="https://thenativeweb.io/"
				target="_blank">@thenativeweb</a
			> building out cloud-based applications. If it runs on your desktop, phone
			or browser, I've build it.
		</p>

		<div class="my-8 flex flex-col gap-4 lg:flex-row">
			<Card
				href="/about/#skills"
				title="My Skills"
				body="Read up on my skills and what I have to offer"
			/>

			<Card
				href="/about/#experience"
				title="Professional Experience"
				body="A brief outline-solid of my professional experience"
			/>
		</div>
	</div>
</BasePageLayout>
