---
interface Props {
	title: string;
	from: string;
	to: string;
	description: string;
	href: string;
}

const { title, from, to, description, href } = Astro.props;
---

<div
	class="mt-4 flex rounded border-2 border-zinc-500 p-0.5 transition-colors duration-300 md:hover:border-zinc-300"
>
	<a {href} class="w-full px-6 py-4 no-underline">
		<p class="m-0 text-2xl font-bold">
			{title}
			<span>&rarr;</span>
		</p>
		<p class="text-neutral-400">
			From {from} to {to}
		</p>
		<p class="mb-0 mt-2">
			{description}
		</p>
	</a>
</div>
